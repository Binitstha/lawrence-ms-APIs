generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notice {
  id          String   @id @default(cuid()) @db.Char(25)
  title       String
  description String
  date        DateTime
}

model User {
  id         String       @id @default(cuid()) @db.Char(25)
  name       String
  email      String       @unique
  password   String
  contact    String
  role       String
  age        String
  address    String
  gender     String
  photo      String?
  Attendance Attendance[]
  Student    Student[]
  Teacher    Teacher[]
  Token      Token[]
}

model Student {
  student_id  String @id
  semester_id String
  student     User   @relation(fields: [student_id], references: [id])
}

model Teacher {
  teacher_id String    @id
  Subject    Subject[]
  teacher    User      @relation(fields: [teacher_id], references: [id])
}

model Token {
  id    String @id
  token String @db.Char(255)
  user  User   @relation(fields: [id], references: [id])
}

model Subject {
  subject_id  String  @id
  name        String
  semester_id String
  teacher_id  String
  teacher     Teacher @relation(fields: [teacher_id], references: [teacher_id])

  @@index([teacher_id], map: "Subject_teacher_id_fkey")
}

model Attendance {
  id               String @id
  attendance_count Int
  semester_id      String
  student          User   @relation(fields: [id], references: [id])
}

model Assignment {
  id           String @id @default(cuid()) @db.Char(25)
  semester     String
  title        String @db.LongText
  description  String @db.LongText
  assignedDate String
  dueDate      String
}

model events {
  id        String @id @default(cuid()) @db.Char(25)
  events    String
  eventDesc String
  date      String
  venue     String
}

model question {
  id           String  @id @default(cuid()) @db.Char(25)
  question     String  @db.LongText
  year         String
  semester     String
  subject_code String
  mark         String
  image        String?

  @@unique([question(length: 100), year], name: "question_year_unique_constraint")
}
