// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Notice {
  id          String   @id @default(cuid()) @db.Char(25)
  // num_id      Int      @id @default(autoincrement())
  title       String
  description String
  date        DateTime
}

model User {
  id         String       @id @default(cuid()) @db.Char(25)
  name       String
  email      String       @unique
  password   String
  contact    String
  role       String
  age        Int
  address    String
  Student    Student[]
  Teacher    Teacher[]
  Token      Token[]
  Attendance Attendance[]
}

model Student {
  student_id  String @id
  student     User   @relation(fields: [student_id], references: [id])
  semester_id String
}

model Teacher {
  teacher_id String    @id
  teacher    User      @relation(fields: [teacher_id], references: [id])
  Subject    Subject[]
}

model Token {
  id    String @id
  user  User   @relation(fields: [id], references: [id])
  token String @db.Char(255)
}

model Subject {
  subject_id  String  @id
  name        String
  semester_id String
  teacher_id  String
  teacher     Teacher @relation(fields: [teacher_id], references: [teacher_id])
}

model Attendance {
  id               String @id
  student          User   @relation(fields: [id], references: [id])
  attendance_count Int
}

model Assignment {
  id           String @id
  title        String
  description  String
  assignedDate String
  dueDate      String
}

model events {
  id        String @id @default(cuid()) @db.Char(25)
  events    String
  eventDesc String
  date      String
  venue     String
}

model question {
  id           String  @id @default(cuid()) @db.Char(25)
  question     String
  year         String
  semester     String
  subject_code String
  mark         String
  image        String?

  @@unique([question, year], name: "question_year_unique_constraint")
}
